{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": ["es6", "dom", "es2017.object", "esnext.array"],
    "types": ["jasmine"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "errorReporting": {
    "excludedCodes": [2564]
  },
  "include": [
    "src"
  ]
}
